rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles - users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Expenses subcollection
      match /expenses/{expenseId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Subscriptions subcollection
      match /subscriptions/{subscriptionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Pursuits subcollection
      match /pursuits/{pursuitId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Pursuit transactions subcollection
      match /pursuit_transactions/{transactionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Savings pool subcollection
      match /savings_pool/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // AI usage subcollection (read-only for users, Cloud Functions write)
      match /ai_usage/{document=**} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false; // Only Cloud Functions can write
      }
    }

    // Promo users - users can read their own promo status
    // Only admin SDK can write (grant/revoke promo access)
    match /promo_users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Only admin SDK can write
    }

    // App data (exchange rates, etc.) - readable by all authenticated users
    // Only writable by Cloud Functions (admin SDK)
    match /app_data/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admin SDK can write
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
